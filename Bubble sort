#include <iostream>
using namespace std;

int main() 
{
  int n;
  cout<<"Enter size of array: ";
  cin>>n;
  int a[n];
  cout<<"Enter elements of array:\n";
  for(int i=0;i<n;i++){
    cin>>a[i];
  }
  // bubble sort
  for(int i=0;i<n-1;i++){
    for(int j=i+1;j<n;j++){
      if(a[i]>a[j]){
        swap(a[i],a[j]);
      }
    }
  }
  cout<<"After sorting:\n";
  for(int i=0;i<n;i++){
    cout<<a[i]<<" ";
  }
  return 0;
}

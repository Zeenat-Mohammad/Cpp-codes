#include <iostream>
using namespace std;

int main(){
    int row,col;
    cout<<"Enter no. of rows: ";
    cin>>row;
    cout<<"Enter no. of col: ";
    cin>>col;
    int mat[row][col];
    cout<<"Enter elements of matrix:\n";
    for(int i=0;i<row;i++){
        for(int j=0;j<col;j++){
            cin>>mat[i][j];
        }
    }
    int sum1=0,sum2=0;
    cout<<"Sum of all elements in each row:\n";
    for(int i=0;i<row;i++){
        for(int j=0;j<col;j++){
            sum1+=mat[i][j];
        }
        cout<<"Row "<<i<<": "<<sum1<<endl;
        sum1=0;
    }
    cout<<"Sum of all elements in each column:\n";
    for(int i=0;i<row;i++){
        for(int j=0;j<col;j++){
            sum2+=mat[j][i];
        }
        cout<<"Column "<<i<<": "<<sum2<<endl;
        sum2=0;
    }
    return 0;
}

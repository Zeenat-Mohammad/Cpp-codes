/* pattern 

    *
   * *
  *   *
 *     *
*********

*/

#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int r,c;
    cout<<"Enter no. of rows: ";
    cin>>r;
    cout<<"Enter numbers of columns: ";
    c=r+r-1;
    cout<<c<<endl;
    for(int i=0;i<r;i++){
        for(int j=r-2;j>=i;j--){
            cout<<" ";
        }
        for(int j=0;j<1;j++){
            cout<<"*";
        }
        for(int j=0;j<i;j++){
            if(i==r-1){
                cout<<"*";
            }
            else{
                cout<<" ";
            }
        }
        for(int j=2;j<=i;j++){
            if(i==r-1){
                cout<<"*";
            }
            else{
                cout<<" ";
            }
        }
        if(i>=1){
            for(int j=0;j<=0;j++){
                cout<<"*";
            }
        }
        cout<<endl;
    }
    return 0;
}

// Write a program to sort the characters in descending order

#include <iostream>
#include <string> 
using namespace std;

int main() {
    string s1;
    cout<<"Enter a string: ";
    getline(cin,s1);
    for(int  i=0;i<s1.size();i++){
        for(int j=0;j<s1.size();j++){
            if(s1[j]<s1[j+1]){
                swap(s1[j],s1[j+1]);
            }
        }
    }
    cout<<"String after sorting:\n";
    for(int i=0;i<s1.size();i++){
        cout<<s1[i];
    }
    return 0;
}

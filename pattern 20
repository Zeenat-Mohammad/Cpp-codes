*   *
*  *
* *
**
*


*/

#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int r,c;
    cout<<"Enter no. of columns: ";
    cin>>c;
    cout<<"Numbers of rows: ";
    r=c+c-1;
    cout<<c<<endl;
    for(int i=0;i<=ceil(r/2);i++){
        cout<<"*";
        for(int j=1;j<i;j++){
            cout<<" ";
        }
        if(i>0){
            for(int j=0;j<1;j++){
                cout<<"*";
            }
        }
        cout<<endl;
    }
    for(int i=0;i<=floor(r/2);i++){
        cout<<"*";
        for(int j=floor(r/2)-1;j>i;j--){
            cout<<" ";
        }
        if(i<floor(r/2)){
            for(int j=0;j<1;j++){
                cout<<"*";
            }
        }
        cout<<endl;
    }
    return 0;
}

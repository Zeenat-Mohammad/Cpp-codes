#include <iostream>
using namespace std;

int avg(int array[],int size){
    if(size==0){
        return 0;
    }
    return array[size-1]+avg(array,size-1);
}

int main(){
    int size;
    cout<<"Enter the size of array: ";
    cin>>size;
    int array[size];
    cout<<"Enter elements in array:\n";
    for(int i=0;i<size;i++){
        cin>>array[i];
    }
    int result=avg(array,size);
    cout<<"Average = "<<result/size;
    return 0;
}

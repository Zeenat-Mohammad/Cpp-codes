//Separate Even and Odd Numbers in Array

#include <iostream>
using namespace std;

int main(){
    int size;
    cout<<"Enter the size of array: ";
    cin>>size;
    int arr[size];
    cout<<"Enter the elements of array:\n";
    for(int i=0;i<size;i++){
        cin>>arr[i];
    }
    int n=0;
    int arr_2[size];
    for(int i=0;i<size;i++){
        if(arr[i]%2==0){
            arr_2[n++]=arr[i];
        }
    }
    for(int i=0;i<size;i++){
        if(arr[i]%2!=0){
            arr_2[n++]=arr[i];
        }
    }
    for(int i=0;i<size;i++){
        cout<<arr_2[i]<<" ";
    }
    return 0;
}

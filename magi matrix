#include <iostream>
using namespace std;

int main(){
    int n;
    cout<<"Enter no. of rows and column: ";
    cin>>n;
    int mat[n][n];
    if(n%2!=0){
        cout<<"Enter elements of matrix:\n";
        for(int i=0;i<n;i++){
            for(int j=0;j<n;j++){
                cin>>mat[i][j];
            }
        }
        int sum1=0,sum2=0,sum3=0;
        bool flag=false;
        for(int i=0;i<n;i++){
            for(int j=0;j<n;j++){
                sum1+=mat[i][j];
                sum2+=mat[j][i];
                if(i==j){
                    sum3+=mat[i][j];
                }
            }
            if(sum1==sum2){
                sum1=sum2=0;
                flag=true;
                if(i==n-1){
                    if(sum2==sum3){
                        flag=true;
                    }
                }
                continue;
            }
            else{
                flag=false;
                if(i==n-1){
                    if(sum2==sum3){
                        flag=false;
                    }
                }
                break;
            }
        }
        if(flag==false){
            cout<<"It is not a magic matrix";
        }
        else{
            cout<<"It is a magic matrix";
        }
    }
    else{
        cout<<"No. of rows and column of matrix must be odd";
    }
    return 0;
}

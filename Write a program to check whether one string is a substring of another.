// Write a program to check whether one string is a substring of another

#include <iostream>
#include <string>
using namespace std;

int main(){
    string s1, s2;
    cout<<"Enter first string: ";
    getline(cin, s1);
    cout<<"Enter second string: ";
    getline(cin, s2);
    bool flag=false;
    int j=0;
    for (int i=0;i<=s1.size()-s2.size();i++){
        for (j =0;j<s2.size();j++){
            if(s1[i+j]!=s2[j]){
                break;  
            }
        }
        if(j==s2.size()){
            flag=true; 
            break;
        }
    }
    if(flag){
        cout<<"Substring found!"<<endl;
    }
    else{
        cout<<"Substring not found!"<<endl;
    }
    return 0;
}

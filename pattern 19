/* pattern 

*********
 *     *
  *   *
   * *
    *

*/

#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int r,c;
    cout<<"Enter no. of rows: ";
    cin>>r;
    cout<<"No. of columns: ";
    c=r+r-1;
    cout<<c<<endl;
    for(int i=0;i<r;i++){
        for(int j=0;j<i;j++){
            cout<<" ";
        }
        for(int j=0;j<1;j++){
            cout<<"*";
        }
        for(int j=r-1;j>i;j--){
            if(i==0){
                cout<<"*";
            }
            else{
                cout<<" ";
            }
        }
        for(int j=r-1;j>i+1;j--){
            if(i==0){
                cout<<"*";
            }
            else{
                cout<<" ";
            }
            if(i==r-1){
                continue;
            }
        }
        if(i<r-1){
            for(int j=0;j<1;j++){
                cout<<"*";
            }
        }
        cout<<endl;
    }
    return 0;
}

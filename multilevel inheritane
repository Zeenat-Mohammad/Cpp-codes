
#include <iostream>
#include <string>
using namespace std;

class shape{
    string name;
    public:
    void get(){
        cout<<"Enter shape name: ";
        cin>>name;
    }
    void print(){
        cout<<"Shape: "<<name<<endl;
    }
};

class circle:public shape{
    float r;
    public:
    int get(){
        r=10;
        return r;
    }
    void print(){
        cout<<"Radius: "<<r<<endl;
    }
};

class area:public circle{
    float area;
    public:
    void display(){
        
        area=circle::get()*circle::get()*3.14;
        cout<<"area: "<<area;
    }
};

int main(){
    area a;
    a.shape::get();
    a.shape::print();
    a.circle::get();
    a.circle::print();
    a.display();
    return 0;
}

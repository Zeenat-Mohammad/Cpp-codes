#include <iostream>
#include <string>
using namespace std;

int main(){
    string s1;
    cout<<"Enter a word: ";
    cin>>s1;
    string rev;
    int n=0;
    cout<<"String:\n";
    for(int i=0;i<s1.size();i++){
        cout<<s1[i];
    }
    cout<<endl;
    for(int i=s1.size()-1;i>=0;i--){
        rev[n++]=s1[i];
    }
    cout<<"String after reverse:\n";
    for(int i=0;i<s1.size();i++){
        cout<<rev[i];
    }
    return 0;
}

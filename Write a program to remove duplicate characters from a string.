// Write a program to remove duplicate characters from a string.

#include <iostream>
#include <string>
using namespace std;

int main(){
    string s1,s2;
    cout<<"Enter a string: ";
    getline(cin,s1);
    int n=0;
    bool flag=false;
    for(int i=0;i<s1.size();i++){
        for(int j=i+1;j<s1.size();j++){
            if(s1[i]!=s1[j]){
                flag=true;
            }
            else{
                flag=false;
                break;
            }
        }
        if(flag==true){
            s2[n++]=s1[i];
        }
    }
    for(int j=0;j<n;j++){
        cout<<s2[j];
    }
    return 0;
}
